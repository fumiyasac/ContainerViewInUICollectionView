# platform :ios, '9.0'

target 'ContainerViewInUICollectionView' do
  use_frameworks!

  # Pods for ContainerViewInUICollectionView
 
  # 1. API通信処理や内部データ保存処理の基盤となるライブラリ
  pod 'Moya'
  pod 'RealmSwift'
  pod 'Nuke'

  # 2. アーキテクチャの基盤となるライブラリ
  pod 'ReSwift'
  pod 'RxSwift'

  # 3. UI表現の際に利用するライブラリ
  pod 'AnimatedCollectionViewLayout'
  pod 'Parchment'
  pod 'Blueprints'
  pod 'SPStorkController'
  pod 'ESTabBarController-swift'
  pod 'SwipeCellKit'
  pod 'FontAwesome.swift'
  pod 'Pastel'
  pod 'TransitionableTab'

  # 4. テキスト処理の取り扱いに関するライブラリ
  pod 'SwiftyMarkdown'
  pod 'SwiftyAttributes'
end
